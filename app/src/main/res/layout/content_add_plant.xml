                <android.support.design.widget.TextInputLayout
                    android:id="@+id/p_name"
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.03"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <EditText
                        android:id="@+id/input_pname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/plant_name"
                        android:textColor="@color/black"
                        android:imeOptions="actionNext"
                        android:maxLines="1"/>
                    <requestFocus/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/p_scien"
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/p_name"
                    app:layout_constraintVertical_bias="0.03"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <EditText
                        android:id="@+id/input_scientific"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/p_scientific"
                        android:textColor="@color/black"
                        android:imeOptions="actionNext"
                        android:maxLines="1"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/p_uses"
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/p_scien"
                    app:layout_constraintVertical_bias="0.03"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <EditText
                        android:id="@+id/input_uses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/p_uses"
                        android:textColor="@color/black"
                        android:imeOptions="actionNext"
                        android:maxLines="5"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/p_steps"
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/p_uses"
                    app:layout_constraintVertical_bias="0.03"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <EditText
                        android:id="@+id/input_steps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/steps_to_prepare"
                        android:textColor="@color/black"
                        android:imeOptions="actionNext"
                        android:maxLines="10"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/p_tech"
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/p_steps"
                    app:layout_constraintVertical_bias="0.03"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <EditText
                        android:id="@+id/input_tech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="How to Plant: "
                        android:textColor="@color/black"
                        android:imeOptions="actionDone"
                        android:maxLines="10"/>
                </android.support.design.widget.TextInputLayout>


                <!--</ScrollView>-->

            <Button
                android:id="@+id/submit"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="@string/add_plant_uses"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:theme="@style/MyButton"
                android:textColor="@color/btn_login_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_tech"
                app:layout_constraintVertical_bias="0.18"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>


